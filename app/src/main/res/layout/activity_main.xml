<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zje.arouterdemo.MainActivity">

    <Button
        android:id="@+id/bt_simple"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="简单跳转"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_with_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="携带数据跳转"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_simple"  />

    <Button
        android:id="@+id/bt_for_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="跳转返回数据"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_with_data"  />

    <Button
        android:id="@+id/bt_uri"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="URi跳转"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_for_result"  />

</android.support.constraint.ConstraintLayout>
